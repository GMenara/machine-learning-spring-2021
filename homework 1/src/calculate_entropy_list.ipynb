    "def calculate_entropy_list(list):\n",
    "    from collections import Counter  \n",
    "    cnt = Counter(x for x in list)\n",
    "    num_instances = len(list)*1.0\n",
    "    probs = [x / num_instances for x in cnt.values()]\n",
    "    return calculate_entropy(probs)"
   ]
